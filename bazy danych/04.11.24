SELECT
    CONCAT(
        UPPER(LEFT(imie, 1)),
        SUBSTRING(imie, 2, 50),
        ' ',
        UPPER(LEFT(nazwisko, 1)),
        SUBSTRING(nazwisko, 2, 50)
    ) AS `imie i nazwisko`,
    CONCAT(
        ' id: ',
        id, 
        ' wiek ', 
        wiek) AS `informacje dodatkowe`
FROM
    uczniowie;



